{
  "productName": "electron-bomb",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "fmt": "yarn run prettier && yarn run eslint --fix",
    "start": "electron .",
    "test": "yarn run eslint",
    "eslint": "eslint .",
    "prettier": "prettier --write '*.{js,md}'"
  },
  "dependencies": {
    "electron": "^1.7.9"
  },
  "devDependencies": {
    "eslint": "^4.13.1",
    "eslint-config-prettier": "^2.9.0",
    "prettier": "^1.9.2"
  },
  "eslintConfig": {
    "extends": "prettier",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "rules": {
      "comma-dangle": 0,
      "global-require": 2,
      "sort-imports": [
        "error", {
          "ignoreCase": true
        }
      ],
      "sort-keys": [
        "error",
        "asc",
        {
          "natural": true
        }
      ]
    }
  },
  "prettier": {
    "proseWrap": "always",
    "trailingComma": "es5"
  }
}
