{
  "productName": "electron-bomb",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "fmt": "yarn run prettier && yarn run eslint --fix",
    "start": "electron .",
    "test": "yarn run eslint",
    "eslint": "eslint .",
    "prettier": "prettier --write '*.{js,md}'"
  },
  "dependencies": {
    "electron": "5.x"
  },
  "devDependencies": {
    "eslint": "5.x",
    "eslint-config-oz": "github:johnmuhl/eslint-config-oz#v2.1.0",
    "eslint-plugin-flowtype": "3.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x"
  },
  "eslintConfig": {
    "extends": "oz"
  },
  "prettier": {
    "proseWrap": "always",
    "trailingComma": "es5"
  }
}
