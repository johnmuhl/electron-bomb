{
  "productName": "electron-bomb",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "fmt": "yarn run prettier && yarn run eslint --fix",
    "start": "electron .",
    "test": "yarn run eslint",
    "eslint": "eslint .",
    "prettier": "prettier --write '*.{js,md}'"
  },
  "dependencies": {
    "electron": "^1.7.9"
  },
  "devDependencies": {
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "prettier": "^1.9.2"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 6
    }
  },
  "prettier": {
    "proseWrap": "always",
    "trailingComma": "es5"
  }
}
